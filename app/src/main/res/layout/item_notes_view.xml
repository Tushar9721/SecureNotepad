<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeNotes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:background="@drawable/backgroung_notes_white"
    android:orientation="vertical"
    android:padding="@dimen/dp_14">


    <TextView
        android:id="@+id/tvSetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sen_bold"
        android:padding="@dimen/dp_4"
        android:text="Title"
        android:layout_toStartOf="@+id/ivLockNoteView"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_26"
        android:layout_toLeftOf="@+id/ivLockNoteView" />

    <!--<TextView
        android:id="@+id/tvSetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSetTitle"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:fontFamily="@font/sen_regular"
        android:text="24/feb/2020"
        android:textColor="@color/off_white"
        android:textSize="@dimen/sp_14" />-->

    <TextView
        android:id="@+id/tvSetContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSetTitle"
        android:fontFamily="@font/sen_regular"
        android:maxLines="10"
        android:padding="@dimen/dp_8"
        android:text="Content"
        android:textColor="@color/off_white"
        android:textSize="@dimen/sp_16" />


    <ImageView
        android:id="@+id/ivPinNoteView"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_2"
        android:visibility="gone"
        android:src="@drawable/ic_pushpin" />

    <ImageView
        android:id="@+id/ivLockNoteView"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_toStartOf="@+id/ivPinNoteView"
        android:layout_toLeftOf="@+id/ivPinNoteView"
        android:layout_marginEnd="@dimen/dp_2"
        android:padding="@dimen/dp_2"
        android:visibility="gone"
        android:src="@drawable/ic_lock"
        android:layout_marginRight="@dimen/dp_2" />


</RelativeLayout>