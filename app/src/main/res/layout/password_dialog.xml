<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/pass_background"
    android:padding="@dimen/dp_20"
    >

    <TextView
        android:id="@+id/textCreatePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:fontFamily="@font/sen_regular"
        android:text="@string/make_your_note_secure_by_adding_the_password_crate_a_password"
        android:textColor="@color/dark_indigo"
        android:textSize="@dimen/sp_20" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCreatePass"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/pass_background"
        android:fontFamily="@font/sen_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="14"
        android:maxLines="1"
        android:padding="@dimen/dp_8"
        android:textColor="@color/dark_indigo"
        android:textColorHint="@color/off_white"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:id="@+id/cancelDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edPassword"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_toStartOf="@+id/donePassword"
        android:layout_toLeftOf="@+id/donePassword"
        android:fontFamily="@font/sen_bold"
        android:text="CANCEL"
        android:textColor="@color/tomato_red"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/donePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="@font/sen_bold"
        android:text="DONE"
        android:textColor="@color/grass_59ac27"
        android:textSize="@dimen/sp_20" />


</RelativeLayout>